if [[ -n $SSH_CONNECTION ]];
  then export EDITOR="vim"
else
  export EDITOR="nvim"
fi

if [ -d "$HOME/.bin" ];
  then PATH="$HOME/.bin:$PATH"
fi

if [ -d "$HOME/.local/bin" ];
  then PATH="$HOME/.local/bin:$PATH"
fi

GEM_HOME="$(ruby -e "puts Gem.user_dir")"
if [ -d "$GEM_HOME/bin" ];
  then PATH="$GEM_HOME/bin:$PATH"
fi
